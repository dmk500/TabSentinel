{
  "manifest_version": 3,
  "name": "TabSentinel Tab Suspender",
  "version": "1.5",
  "description": "Automatically suspends inactive tabs after a specified time.",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icon_bg.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
